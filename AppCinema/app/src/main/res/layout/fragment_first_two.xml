<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.first_start.FirstTwoFragment">

    <ImageView
        android:id="@+id/imageViewStartFirstTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/picture_splash_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewLogoFirstTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/skillcinema_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFirstTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textSize="32sp"
        android:text="@string/start_first_text_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewStartFirstTwo" />

    <ImageView
        android:id="@+id/imageViewTwoFirstOneOfThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:src="@drawable/dot_grey"
        app:layout_constraintBottom_toTopOf="@+id/textViewFirstTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewStartFirstTwo" />

    <ImageView
        android:id="@+id/imageViewTwoFirstTwoOfThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/dot_black"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewTwoFirstOneOfThree"
        app:layout_constraintStart_toEndOf="@+id/imageViewTwoFirstOneOfThree" />

    <ImageView
        android:id="@+id/imageViewTwoFirstThreeOfThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/dot_grey"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewTwoFirstTwoOfThree"
        app:layout_constraintStart_toEndOf="@+id/imageViewTwoFirstTwoOfThree" />

</androidx.constraintlayout.widget.ConstraintLayout>