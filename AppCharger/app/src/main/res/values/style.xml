<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button_start">
        <item name="android:background">@drawable/button_start_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:textColor">@color/button_start_text</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Button_default">
        <item name="android:background">@drawable/button_default_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/button_default_text</item>
    </style>

    <style name="Text_primary">
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text_description">
        <item name="android:textSize">@dimen/text_description</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/text_description</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text_secondary" parent="Text_description">
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Text_login">
        <item name="android:textSize">@dimen/edit_text_login</item>
        <item name="android:alpha">0.75</item>
        <item name="android:background">@color/edit_text_login_background</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">@dimen/padding_half</item>
        <item name="android:drawablePadding">@dimen/padding_double</item>
    </style>

    <style name="Text_description_secondary">
        <item name="android:textSize">@dimen/text_description_secondary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/text_description_secondary</item>
    </style>

</resources>